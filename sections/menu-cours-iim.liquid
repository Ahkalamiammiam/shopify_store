<img src="{{ section.settings.image | img_url: 'master'  }}" alt="">

<nav class="mynavbar">
    <ul>
        {% for link in linklists[section.settings.menu-iim].links %}
        <li><a href="{{ link.url }}">{{ link.title }}</a></li>
        {% endfor %}
    </ul>
</nav>

{% schema %}
{
    "name": "Menu",
    "settings": [
        {
            "id": "menu-iim",
            "type": "link_list",
            "label": "Menu",
            "default": "main-menu"
        },
        {
            "id": "image",
            "type": "image_picker",
            "label": "Image"
        }
    ],
    "presets": [
        {
            "category": "Cours IIM",
            "name": "Menu"
        }
    ]
}
{% endschema %}